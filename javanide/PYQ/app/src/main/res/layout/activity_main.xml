<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.codinginflow.multipleonclicklistenerexample.MainActivity">
    <LinearLayout
    
 android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
       >
    
    
    <Button
       
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JEE(MAIN)" 
      android:background="@layout/round"
       android:layout_margin="15dp" 
       android:layout_gravity="center"/>
 
    
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JEE(ADVANCE)" 
       android:background="@layout/round1" 
     android:layout_gravity="center" 
      android:layout_margin="15dp" />
 
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEET"
        android:background="@layout/round2"
       android:layout_margin="15dp" 
        android:layout_gravity="center"/>
 
  
    <Button
       
       android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIIMS"
   android:layout_margin="15dp"
        android:background="@layout/round3"
        android:layout_gravity="center" />
 
  
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KVPY" 
        android:layout_margin="15dp"
       android:background="@layout/round"
     android:layout_gravity="center" />
     
     <com.google.android.gms.ads.AdView
      xmlns:ads="http://schemas.android.com/apk/res-auto"
      android:id="@+id/adView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      ads:adSize="BANNER"
      ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
  </com.google.android.gms.ads.AdView>
       
       
 
</LinearLayout>
</ScrollView>
